{
  "name": "(edit mode) saas-class-pastebin",
  "version": "1.0.3.19",
  "permissions": [
    "background", "tabs", "http://*/*", "https://*/*", "unlimitedStorage"  
  ],
   "background": {    
	"page": "background.html"
  },
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["lecture_info.js"]
    }
  ],  
  "browser_action": {
      "default_title": "Shows links to pastebin code while watching lecture videos on saas-class.org",
      "default_icon": "edit_icon.png",
	  "default_popup" : "edit_popup.html"
  },
  "manifest_version": 2,
  "icons": { "16": "icon16.png",
           "48": "icon48.png",
          "128": "icon128.png" },
		  
  "content_security_policy": "script-src 'self' https://ssl.google-analytics.com; object-src 'self'"
}
