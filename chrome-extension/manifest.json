{
  "name": "saas-class-pastebin",
  "version": "1.0.3.18",
  "permissions": [
    "background", "tabs", "http://*/*", "https://*/*"
  ],
   "background": {    
	"page": "background.html"
  },
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["lecture_info.js"]
    }
  ],  
  "browser_action": {
      "default_title": "Shows links to pastebin code while watching lecture videos on saas-class.org",
      "default_icon": "icon.png",
	  "default_popup" : "popup.html"
  },
  "manifest_version": 2,
  
  "update_url": "https://www.dropbox.com/s/9qniqawrq45vk6q/updates.xml"
}
